@using Microsoft.AspNetCore.Components.Routing
@inject IJSRuntime JSRuntime

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">TrainerFrontend</a>
    </div>
</div>

<input type="checkbox" id="darkModeToggle" @onchange="ToggleDarkMode" />
<label for="darkModeToggle">Dark Mode</label>

<div class="collapse nav-scrollable" @onclick:stopPropagation>
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/trainer">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Trainer
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool isDarkMode;

    private async Task ToggleDarkMode(ChangeEventArgs e)
    {
        isDarkMode = (bool)e.Value;
        await JSRuntime.InvokeVoidAsync("setDarkMode", isDarkMode);
    }
}